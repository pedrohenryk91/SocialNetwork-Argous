generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  email     String      @unique
  password  String
  profileId String      @unique
  posts     Post[]
  profile   UserProfile @relation(fields: [profileId], references: [id])

  @@map("users")
}

model UserProfile {
  id          String   @id @default(uuid())
  username    String?
  description String?
  birthday    DateTime
  following   Follow[] @relation("UsersFollowed") //Eu sigo
  followers   Follow[] @relation("UserFollowers") //Me seguem
  user        User?

  @@map("profiles")
}

model Follow {
  followerId String
  followedId String

  followed UserProfile @relation("UserFollowers",fields: [followedId], references: [id]) //Seguidos
  follower UserProfile @relation("UsersFollowed",fields: [followerId], references: [id]) //Seguem

  @@id([followerId, followedId])
  @@map("follows")
}

model Post {
  id          String       @id @default(uuid())
  authorId    String
  contentId   String       @unique
  author      User         @relation(fields: [authorId], references: [id])
  content     PostContent  @relation(fields: [contentId], references: [id])

  @@map("posts")
}

model PostContent {
  id          String    @id @default(uuid())
  title       String    @db.VarChar(200)
  textContent String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
  postedAt    DateTime?
  post        Post?

  @@map("postscontent")
}
